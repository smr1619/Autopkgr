Identifier: com.chrome.chrome
Description: Recipe to download and upload Chrome to Jamf
Input:
  URL: https://dl.google.com/chrome/mac/stable/GGRO/googlechrome.dmg
Process:
  - name: download
    type: url_downloader
    arguments:
      url: "{{URL}}"
      filename: "chrome.dmg"
  - name: extract
    type: dmg_extractor
    arguments:
      source_path: "chrome.dmg"
  - name: upload
    type: jamf_package_uploader
    arguments:
      pkg_path: "chrome.pkg"
      policy_name: "1. Monthly Patching"
Output:
  - name: pkg_path
    type: path
    path: "chrome.pkg"
